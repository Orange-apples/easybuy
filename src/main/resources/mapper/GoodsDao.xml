<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.galaxy.easybuy.dao.GoodsDao">

    <resultMap type="com.galaxy.easybuy.entity.Goods" id="GoodsMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="price" column="price" jdbcType="NUMERIC"/>
        <result property="stock" column="stock" jdbcType="INTEGER"/>
        <result property="content" column="content" jdbcType="VARCHAR"/>
        <result property="img" column="img" jdbcType="VARCHAR"/>
        <result property="categoryId" column="category_id" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="OTHER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="GoodsMap">
        select
          id, name, price, stock, content, img, category_id, create_time
        from eazybuy.goods
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="GoodsMap">
        select
          id, name, price, stock, content, img, category_id, create_time
        from eazybuy.goods
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="GoodsMap">
        select
          id, name, price, stock, content, img, category_id, create_time
        from eazybuy.goods
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="price != null">
                and price = #{price}
            </if>
            <if test="stock != null">
                and stock = #{stock}
            </if>
            <if test="content != null and content != ''">
                and content = #{content}
            </if>
            <if test="img != null and img != ''">
                and img = #{img}
            </if>
            <if test="categoryId != null">
                and category_id = #{categoryId}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into eazybuy.goods(name, price, stock, content, img, category_id, create_time)
        values (#{name}, #{price}, #{stock}, #{content}, #{img}, #{categoryId}, #{createTime})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update eazybuy.goods
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="stock != null">
                stock = #{stock},
            </if>
            <if test="content != null and content != ''">
                content = #{content},
            </if>
            <if test="img != null and img != ''">
                img = #{img},
            </if>
            <if test="categoryId != null">
                category_id = #{categoryId},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from eazybuy.goods where id = #{id}
    </delete>

</mapper>